<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="account_bank_statement_view" model="ir.ui.view">
            <field name="name">Bank Statements</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="balance_end_real" position="after">
                    <field name="account_balance_color" invisible="1"/>
                    <field name="account_balance_label" nolabel="1" attrs="{'invisible': [('account_balance_color', '!=', False)]}"/>
                    <field name="account_balance" nolabel="1" attrs="{'invisible': [('account_balance_color', '!=', False)]}" widget="monetary" options="{'currency_field': 'currency'}"/>
                    <field name="account_balance_label_red" nolabel="1" attrs="{'invisible': [('account_balance_color', '=', False)]}" style="color: red;"/>
                    <field name="account_balance_red" nolabel="1" attrs="{'invisible': [('account_balance_color', '=', False)]}" widget="monetary" options="{'currency_field': 'currency'}" style="color: red;"/>
                </field>
                <field name="period_id" position="replace">
                    <field name="period_id" class="oe_inline" options="{'no_create': True, 'no_open':True}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
